}

.leiji .leiji_1{
  width: 700rpx;
  height: 200rpx;
  background: linear-gradient(to right,#1CC9E9,#15E8BD);
  border-radius: 10rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content:  center;
  padding-top: 20rpx;
  box-shadow: 10rpx 10rpx 10rpx #ccc;
  margin-top: 20rpx;
}

.leiji .leiji_1 .leiji_1_1{
  width: 350rpx;
  height: 180rpx;
}

