  font-family: '微软雅黑';
  font-size: 50rpx;
  color: #fff;
}

.leiji .leiji_1 .leiji_1_1 view{
  display: inline-block;
  width: 330rpx;
  height: 10rpx;
  background-color: #fff;
  border-radius: 5rpx;
}

.leiji .leiji_2{
  width: 700rpx;
