  margin-top: 20rpx;
}


.leiji .leiji_2 .leiji_2_1{
  width: 350rpx;
  height: 160rpx;
  float: left;
  margin-bottom: 50rpx;
}


.leiji .leiji_2 .leiji_2_1 text{
  font-family: '微软雅黑';
  font-size: 40rpx;
  color: #fff;
  display: block;
}
.leiji .leiji_2 .leiji_2_1 text:nth-of-type(2){
  font-size: 50rpx;
}

.leiji .leiji_2 .leiji_2_1 view{
  display: inline-block;
  width: 330rpx;
  height: 10rpx;
  background-color: #fff;
  border-radius: 5rpx;
}

.leiji .leiji_2 .leiji_2_1:first-of-type view{
  background-color: #E6968B;
}
.leiji .leiji_2 .leiji_2_1:nth-of-type(3) view{
