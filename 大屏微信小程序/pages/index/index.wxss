/***index***/
.container{
  width: 100%;
  padding-left: 42rpx;
  padding-top: 50rpx;
}

.container .item{
  width: 180rpx;
  height: 375rpx;
  margin-right: 60rpx; 
}

.container .item .img{
  width: 180rpx;
  height: 260rpx;
  background: #EDEDED;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 25rpx;
}

.container .item .icon{
  width: 128rpx;
  height: 128rpx;
}

.container .txt{
  font-family: '微软雅黑';
  font-size: 36rpx;
  color: #000;
  text-align: center;
  display: block;
}